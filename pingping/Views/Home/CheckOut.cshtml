                if (result == 0) { alert("Error Load Color.") }
                else {
                    $('#loadColor_'+result).html(html + '</select>'); 
                //$('#myTab').html(tab);
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }

    var si = 0; var hd = 0;
