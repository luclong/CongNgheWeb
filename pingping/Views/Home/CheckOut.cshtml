        //console.log("id_size " + id_size);
        var id_size1 = id_size.split(/-| /)[0];
        var id_hdct1 = id_size.split(/-| /)[1];

        si = Number(id_size1);
        hd = Number(id_hdct1);

        //alert(id_hdct1);
        $.ajax({
        url: '@Url.Action("Get_Color_Size_id", "Home")',
        type: 'GET',
        dataType: 'json',
        data: { id_size: id_size1 },
        success: function (data) {
