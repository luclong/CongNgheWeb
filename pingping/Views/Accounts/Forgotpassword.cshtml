    <!-- Main content -->
    <div class="main-content">
        <!-- Header -->
        <div class="header bg-gradient-primary py-7 py-lg-8 pt-lg-9">
            <div class="container">
                <div class="header-body text-center mb-7">
                    <div class="row justify-content-center">
                        <div class="col-xl-5 col-lg-6 col-md-8 px-5">
                            <h1 class="text-white">Lấy lại mật khẩu</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="separator separator-bottom separator-skew zindex-100">
                <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
                    <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
                </svg>
            </div>
        </div>
        <!-- Page content -->
        <div class="container mt--8 pb-5">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-7">
                    <div class="card bg-secondary border-0 mb-0" style="margin-top:-15%">
                        <!--Login-start-->
                        <div id="loginForm">

                            <div class="card-body px-lg-5 py-lg-5">
                                @using (Html.BeginForm("Forgotpassword", "Accounts", FormMethod.Post, new { @role = "form" }))
                                {
                                    <div class="content">
                                        <div class="@ViewBag.Alret">@ViewBag.TB</div>
                                        <div>
                                            <label>Tài Khoản:</label>
                                            <input type="text" placeholder="Tài Khoản" class="form-control" name="taikhoan" id="taikhoản" />
                                        </div>
                                        <div>
                                            <label>Email:</label>
                                            <input type="email" placeholder="Email" class="form-control" name="email" id="email" />
                                        </div>
                                        <div class="clearfix"></div>
                                        <br />
                                        <div class="left">
                                            <input type="submit" class="btn btn-outline-secondary" value="Gửi" />
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <!--Login-end-->
                    </div>
                    <div class="row mt-3">
                        <div class="col-6">
                            <a href="#" class="text-light"><small>Forgot password?</small></a>
                        </div>
                        <div class="col-6 text-right">
                            <a href="~/Accounts/Register" class="text-light" id="Registers"><small>Create new account</small></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <footer class="py-5" id="footer-main">
        <div class="container">
            <div class="row align-items-center justify-content-xl-between">
                <div class="col-xl-6">
                    <div class="copyright text-center text-xl-left text-muted">
