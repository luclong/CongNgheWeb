@using Modal.EF
@model Modal.EF.DauGia
@{
    ViewBag.Title = "Lịch Sử Đấu Giá";
}


<!-- Header -->
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Lịch Sử Đấu Giá</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="~/Manage/Manage/Index"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item">Lịch Sử Đấu Giá</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Lịch Sử Đấu Giá</h3>
                </div>
                <!-- Light table -->
                <h2 style="margin-left:1%">Sản Phẩm <font color="#f65e84">@Model.SanPham.tensp</font></h2>
                <div class="ChiTietDonHang table">
                    @{IEnumerable<LichSuDG> lstLSDauGia = (IEnumerable<LichSuDG>)ViewBag.lstLSDauGia;}
                    <table class="table" id="table">
                        <tr>
                            <td colspan="4">
                                <table style="width:100%">
                                    <tr>
                                        <td>Mã đấu giá: <b style="color:red;">@Model.id_daugia</b></td>
                                        <td>Bắt đầu: <b style="color:red">@Model.time_start.Value.ToString("dd/MM/yyyy")</b></td>
                                        <td>Kết thúc: <b style="color:red">@Model.time_end.ToString("dd/MM/yyyy")</b></td>
                                        <td>Tình Trạng: <b style="color:red">@Model.status_</b></td>
                                        <td>Người Chiến thắng: <b class="text-success">@Model.result</b></td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td><b>Họ tên</b></td>
                            <td><b>Số Tiền</b></td>
                            <td><b>Thời gian</b></td>
                        </tr>
                        @foreach (var item in lstLSDauGia)
                        {
                            <tr>
                                <td>@item.TaiKhoan.hoten</td>
                                <td>@item.value.Value.ToString("##,#")</td>
                                <td>@item.time_update.Value.ToString("dd/MM/yyyy ss:mm:HH")</td>
                            </tr>
                        }
                        <tr>
                            <td align="right" colspan="4">Tổng số lượng đấu giá: @lstLSDauGia.Count()</td>
                        </tr>
                    </table>

                </div>
                <div>
                    <input type="button" value="In Lịch Sử" style="margin:2%" id="btnInHoaDon" />
                    @Html.ActionLink("Trở Về", "QuanLyDauGia", "Manage", new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    @Html.Partial("_Footer")
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $("#btnInHoaDon").click(function () {
        var content ="<table>"+ $(".table").html()+"</table>";
        InDonHang(content);
    });
    function InDonHang(content)
    {
        var printWindown = window.open('', '', 'height=400,width=1000');
        printWindown.document.write('<html><head><title>Hoá Đơn</title>');
        printWindown.document.write('</head><body >');
        printWindown.document.write(content);
        printWindown.document.write('</body></html>');
        printWindown.document.close();
        printWindown.print();
    }
</script>