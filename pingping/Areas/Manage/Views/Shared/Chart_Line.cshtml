@{
    Layout = null;
}

<link href="../../assets/styles.css" rel="stylesheet" />
<style>


    #chart {
        max-width: 850px;
        margin: 35px auto;
    }
</style>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    window.Promise ||
        document.write(
            '<script src="https://cdn.jsdelivr.net/npm/promise-polyfill@8/dist/polyfill.min.js"><\/script>'
        )
    window.Promise ||
        document.write(
            '<script src="https://cdn.jsdelivr.net/npm/eligrey-classlist-js-polyfill@1.2.20171210/classList.min.js"><\/script>'
        )
    window.Promise ||
        document.write(
            '<script src="https://cdn.jsdelivr.net/npm/findindex_polyfill_mdn"><\/script>'
        )
</script>

<script src="https://cdn.jsdelivr.net/npm/react@16.12/umd/react.production.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/react-dom@16.12/umd/react-dom.production.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/prop-types@15.7.2/prop-types.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script src="https://cdn.jsdelivr.net/npm/react-apexcharts@1.3.6/dist/react-apexcharts.iife.min.js"></script>

<div id="app"></div>

<script type="text/babel">

    var sl_sp=@ViewBag.sp;
    var sl_kh=@ViewBag.kh;
    var sl_hd=@ViewBag.hdtt;
    var sl_dg=@ViewBag.dg;

    ///////////////////////////////////
    class ApexChart extends React.Component {
    constructor(props) {
    super(props);
    console.log(@ViewBag.sp);
    this.state = {

    series: [{
    name: 'Hóa Đơn',
    data: [2,12,14,9,sl_hd]
    }, {
    name: 'Sản Phẩm',
    data: [10,12,14,9,sl_sp]
    }, {
    name: 'Khách Hàng',
    data: [3,12,14,9,sl_kh]
    }, {
    name: 'Đấu Giá',
    data: [6,12,14,9,sl_dg]
    }],


    options: {
    chart: {
    type: 'bar',
    height: 350,
    color: 'white',
    stacked: true,
    dropShadow: {
    enabled: true,
    blur: 1,
    opacity: 0.25,
    }
    },
    plotOptions: {
    bar: {
    horizontal: true,
    barHeight: '60%',
    },
    },
    dataLabels: {
    enabled: false
    },
    stroke: {
    width: 2,
    },
    title: {
    text: 'Thống Kê',
    color: 'white',
    },
    xaxis: {
    categories: [2014, 2015, 2016, 2017, 2018, 2019, 2021],
    },
    yaxis: {
    title: {
    text: undefined
    },
    },
    tooltip: {
    shared: false,
    y: {
    formatter: function (val) {
    return "SL: " + val;
    }
    }
    },
    fill: {
    type: 'pattern',
    opacity: 1,
    pattern: {
    style: ['circles', 'slantedLines', 'verticalLines', 'horizontalLines'],

    }
    },
    states: {
    hover: {
    filter: 'none'
    }
    },
    legend: {
    position: 'right',
    offsetY: 40
    }
    },


    };
    }

    render() {
    return (
    <div>
        <div id="chart">
            <ReactApexChart options={this.state.options} series={this.state.series} type="bar" height={350} />
        </div>
        <div id="html-dist"></div>
        <h4><strong>Tổng Doanh Thu: @(ViewBag.total.ToString("#,##")) VNĐ</strong></h4>
    </div>
    );
    }
    }

    const domContainer = document.querySelector('#app');
    ReactDOM.render(React.createElement(ApexChart), domContainer);
</script>
